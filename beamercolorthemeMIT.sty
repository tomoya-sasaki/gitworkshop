\mode<presentation>

\definecolor{cardinalred}{RGB}{153, 51, 51}
\definecolor{steelgray}{RGB}{102, 102, 102}
\definecolor{charcoal}{RGB}{33, 33, 33}

\setbeamercolor{normal text}{fg=charcoal,bg=white}
\setbeamercolor{alerted text}{fg=cardinalred}
\setbeamercolor{example text}{fg=cardinalred!50!charcoal}

\setbeamercolor{structure}{fg=charcoal}

\setbeamercolor{palette primary}{fg=charcoal,bg=cardinalred!70}
\setbeamercolor{palette secondary}{fg=white,bg=cardinalred!80}
\setbeamercolor{palette tertiary}{fg=white,bg=cardinalred!90}
\setbeamercolor{palette quaternary}{fg=white,bg=cardinalred}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=white,bg=cardinalred}
\setbeamercolor{block title alerted}{use=alerted text,fg=charcoal,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=charcoal,bg=example text.fg!75!bg}
\setbeamercolor{block title 2}{fg=white,bg=cardinalred}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=cardinalred!70}
  
\setbeamercolor{palette sidebar primary}{fg=charcoal}
\setbeamercolor{palette sidebar secondary}{fg=charcoal!75}
\setbeamercolor{palette sidebar tertiary}{fg=charcoal!75}
\setbeamercolor{palette sidebar quaternary}{fg=charcoal}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
